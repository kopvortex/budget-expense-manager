# ==============================================
# Budget App - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ==============================================
# Django Configuration
# ==============================================
# Generate a secure secret key for Django
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-minimum-50-characters-long-and-random
SECRET_KEY=your-secret-key-here-minimum-50-characters-long-and-random

# Django Debug Mode (set to False in production!)
DJANGO_DEBUG=False
DEBUG=False

# Allowed hosts (comma-separated, no spaces)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CSRF Trusted Origins (comma-separated, include protocol)
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL Database Settings
DB_NAME=budget_db
DB_USER=budget_user
DB_PASSWORD=your-secure-database-password-here
DB_HOST=db
DB_PORT=5432

# PostgreSQL Docker Environment Variables
POSTGRES_DB=budget_db
POSTGRES_USER=budget_user
POSTGRES_PASSWORD=your-secure-database-password-here

# ==============================================
# Django Superuser (Optional - for initial setup)
# ==============================================
# Leave commented out after initial setup for security
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@example.com
# DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password-here

# ==============================================
# Docker/Production Specific
# ==============================================
# Domain for production deployment
DOMAIN=your-domain.com

# SSL/TLS Certificate email
CERT_EMAIL=your-email@example.com

# ==============================================
# Kubernetes/Helm Deployment
# ==============================================
# Note: The following variables are used by the helm-deploy.sh script
# DJANGO_ALLOWED_HOSTS will default to: ${DOMAIN},localhost
# CSRF_TRUSTED_ORIGINS will default to: https://${DOMAIN}
